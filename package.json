{
  "name": "waitlist-app",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "docker:dev:up": "docker compose -f compose.dev.yaml up --build",
    "docker:dev:down": "docker compose -f compose.dev.yaml down",
    "docker:test:up": "docker compose -f compose.test.yaml up --build",
    "docker:test:down": "docker compose -f compose.test.yaml down",
    "docker:prod:up": "docker compose -f compose.prod.yaml up -d",
    "docker:prod:down": "docker compose -f compose.prod.yaml down",
    "test": "NODE_OPTIONS='--experimental-vm-modules' NODE_ENV=test jest",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' NODE_ENV=test jest tests/integration",
    "build": "webpack --config webpack.config.js",
    "watch": "npx webpack --watch",
    "server": "node ./server.js",
    "dev": "nodemon ./server.js",
    "migrations:make": "npx knex migrate:make",
    "migrations:migrate": "npx knex migrate:latest",
    "migrations:rollback": "npx knex migrate:rollback",
    "migrations:list": "npx knex migrate:list",
    "lint": "npx eslint .",
    "format": "npx prettier --write .",
    "cy:open": "NODE_ENV=test npx cypress open",
    "cy:test": "NODE_ENV=test npx cypress run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "A seating waitlist application",
  "dependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "babel-loader": "^10.0.0",
    "bullmq": "^5.56.1",
    "cookie-parser": "^1.4.7",
    "cookie-session": "^2.1.0",
    "css-loader": "^7.1.2",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "express-handlebars": "^8.0.3",
    "express-validator": "^7.2.1",
    "handlebars": "^4.7.8",
    "ioredis": "^5.6.1",
    "knex": "^3.1.0",
    "mini-css-extract-plugin": "^2.9.2",
    "morgan": "^1.10.0",
    "nanoid": "^5.1.5",
    "pg": "^8.16.3",
    "style-loader": "^4.0.0",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "winston": "^3.17.0"
  },
  "type": "module",
  "devDependencies": {
    "@eslint/css": "^0.9.0",
    "@eslint/js": "^9.30.1",
    "@jest/globals": "^30.0.4",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "axe-core": "^4.10.3",
    "babel-jest": "^30.0.4",
    "cypress": "^14.5.1",
    "cypress-axe": "^1.6.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-cypress": "^5.1.0",
    "eslint-plugin-jest": "^29.0.1",
    "globals": "^16.3.0",
    "jest": "^30.0.4",
    "jest-environment-node": "^30.0.4",
    "nodemon": "^3.1.10",
    "prettier": "3.6.2",
    "supertest": "^7.1.3"
  }
}
